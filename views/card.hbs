<h2>Корзина: </h2>
<div class="basket">
    {{#if books.length}}
    <table>
        <thead>
            <tr>
                <th>Название</th>
                <th>Количество</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            {{#each books}}
            <tr>
                <td>{{name}}</td>
                <td>{{count}}</td>
                <td><button class="btn btn-small js-remove" data-id="{{id}}">Удалить</button></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <strong>Цена: <span class="price">{{price}}</span></strong>
{{else}}
<p>Корзина пуста!</p>
{{/if}}
</div>